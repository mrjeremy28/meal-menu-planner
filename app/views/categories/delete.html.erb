
<div class="categories delete container-fluid">
  <h2>Delete Category</h2>

  <%= form_for(@category, method: 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this category?</p>
    <p><%= @category.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Category", class: 'btn btn-danger') %>
    </div>

  <% end %>
</div>