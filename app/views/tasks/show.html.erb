<div class="tasks show">
  <h2> Show Task</h2>
  <div class="container-fluid">
    <div class="d-flex justify-content-end">
    
        <%= link_to("Edit", edit_task_path(@task), class: 'action edit btn btn-primary') %>
        <%= link_to("Delete", delete_task_path(@task), class: 'action delete btn btn-danger') %>
    </div>
    
    <%  # url: task_path, method: get %>
    <table class="table table-striped">    
        <tbody>
            <tr>
                <th scope="row">Name</th>
                <td>
                    <%= @task.name %>
                </td>
            </tr>
            <tr>
                <th scope="row">Position</th>
                <td>
                    <%= @task.position %>
                </td>
            </tr>
            <tr>
                <th scope="row">Completed</th>
                <td>
                    <%= status_tag(@task.completed?) %>
                </td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>
                    <%= simple_format(word_wrap(@task.description, line_width: 40)) %>
                    <!-- <%= @task.description %> -->
                </td>
            </tr>
            <tr>
                <th scope="row">Category</th>
                <td>
                    <%= @task.category&.name %>
                </td>
            </tr>
            <tr>
                <th scope="row">Tags</th>
                <td>
                    <%= @task.tags&.map(&:name).join(", ")%>
                </td>
            </tr>
            <tr>
                <th scope="row">Created</th>
                <td>
                    <%= @task.created_at.to_fs(:long) %>
                </td>
            </tr>
            <tr>
                <th scope="row">Updated</th>
                <td>
                    <%= @task.updated_at.to_fs(:long) %>
                </td>
            </tr>
        </tbody>
        </table>
    </div>
    
</div>
