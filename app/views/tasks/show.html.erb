<div class="tasks show">
    <h2> Show Task</h2>
    <div class="actions">
    <%= link_to("Edit", edit_task_path(@task)) %>
    <%= link_to("Delete", delete_task_path(@task)) %>
    </div>
    
    <%  # url: task_path, method: get %>
    <table summary="Task detail view">
        <tr>
            <th>Name</th>
            <td>
                <%= @task.name %>
            </td>
        </tr>
        <tr>
            <th>Position</th>
            <td>
                <%= @task.position %>
            </td>
        </tr>
        <tr>
            <th>Completed</th>
            <td>
                <%= status_tag(@task.completed?) %>
            </td>
        </tr>
        <tr>
            <th>Description</th>
            <td>
                <%= simple_format(word_wrap(@task.description, line_width: 40)) %>
                <!-- <%= @task.description %> -->
            </td>
        </tr>
        <tr>
            <th>Category</th>
            <td>
                <%= @task.category&.name %>
            </td>
        </tr>
        <tr>
            <th>Tags</th>
            <td>
                <%= @task.tags&.map(&:name).join(", ")%>
            </td>
        </tr>
        <tr>
            <th>Created</th>
            <td>
                <%= @task.created_at.to_fs(:long) %>
            </td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>
                <%= @task.updated_at.to_fs(:long) %>
            </td>
        </tr>
    </table>
    
</div>
