<%= link_to("Back to List", tasks_path, :class => 'back-link') %>
<div class="tasks new">
    <h2> Create Task</h2>
    <%
        @task.errors.add(:name)
        @task.errors.add(:category)
    %>
    <%= form_for( @task) do |f| %>
        <%  # url: task_path, method: post %>
        <%= render(partial: 'form', locals: {f: f}) %>
        <div class="form-buttons">
            <%= f.submit("Create Task") %>
        </div>
    <% end %>
</div>
