<p style="color: green"><%= notice %></p>

<% content_for :title, "Meal plans" %>

<h1>Meal plans</h1>

<div class="container-fluid">

    <div class="d-flex justify-content-end">
    <%= link_to("Add New Meal Plan", new_meal_plan_path, class: 'action new btn btn-primary float-end') %>
  </div>
    <!-- Nav tabs -->
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="collage-tab" data-bs-toggle="tab" data-bs-target="#collage" type="button" role="tab" aria-controls="collage" aria-selected="true">Collage</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="carousel-tab" data-bs-toggle="tab" data-bs-target="#carousel" type="button" role="tab" aria-controls="carousel" aria-selected="false">Carousel</button>
    </li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="collage" role="tabpanel" aria-labelledby="collage-tab">
      <!-- Include your collage partial here -->
      <% @meal_plans.each do |meal_plan| %>
      <div class="nested-fields p-2 g-col-12">
        <div class="form-group border p-2 row justify-content-start">
          <h4><%= link_to meal_plan.to_s, meal_plan %></h4>

          <%= render(partial: "collage", locals: {meal_plan: meal_plan}) %>
          
        </div>
      </div>
    <% end %>
    </div>
    
    <div class="tab-pane fade " id="carousel" role="tabpanel" aria-labelledby="carousel-tab">
      <!-- Include your carousel partial here -->
      <% @meal_plans.each do |meal_plan| %>
      <div class="nested-fields p-2 g-col-12">
        <div class="form-group border p-2 row justify-content-start">
          <h4><%= link_to meal_plan.to_s, meal_plan %></h4>

          <%= render(partial: "carousel", locals: {meal_plan: meal_plan}) %>
          
        </div>
      </div>
    <% end %>
    </div>
  </div>


</div>
