<div class="nested-fields p-2 g-col-12">
    <div class="form-group border p-2 row justify-content-start">
        <div class="col-2 col-md-1">
            <%= f.label :order, class: "form-label" %>
            <%= f.number_field :order, disabled: false, style:"width: 50px;" %>
        </div>
        <div class="col-2 col-md-1">
            <%= f.label :quantity, class: "form-label"%>
            <%= f.text_field :quantity, style:"width: 55px;" %>
        </div>
        <div class="col-3 col-md-2">
            <%= f.label :quantity_unit_id, class: "form-label" do %>
            Measurement
            <% end %>
            <%= f.collection_select :quantity_unit_id, QuantityUnit.all, :id, :name, prompt: 'Select Quantity Unit' %>
        </div>
        <div class="col-3 col-md-2">
            <%= f.label :ingredient_id, class: "form-label" %>
            <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name, prompt: 'Select Ingredient' %>
        </div>
        <div class="col-2 col-md-1">
            <label for="remove-<%= :order %>"  class="form-label">Action</label>
              <button id="remove-<%= :order %>" data-controller="nested-fields" data-action="click->nested-fields#removeField" type="button" class="btn btn-sm btn-outline-danger col-xs-4"><i class="fa-regular fa-trash-can"></i></button>
        </div>
    </div>
  </div>
  