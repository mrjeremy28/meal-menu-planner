<div class="nested-fields p-2 g-col-12">
    <div class="border p-2 row justify-content-start">
        <div class="col-4 col-md-2">
            <div class="form-group">
                <%= f.label :order, class: "form-label" %>
                <%= f.number_field :order, disabled: false, style:"width: 50px;", class: "form-control" %>
            </div>
        </div>
        <div class="col-4 col-md-2">
            <div class="form-group">
                <%= f.label :quantity, class: "form-label"%>
                <%= f.text_field :quantity, class: "form-control" %>
            </div>
        </div>
        <div class="col-4 col-md-3">
            <div class="form-group">
                <%= f.label :quantity_unit_id, class: "form-label" do %>
                Measurement
                <% end %>
                <%= f.collection_select :quantity_unit_id, QuantityUnit.all, :id, :name, {prompt: 'Select Quantity Unit'}, {class: "form-control"} %>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="form-group">
                <%= f.label :ingredient_id, class: "form-label" %>
                <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name, {prompt: 'Select Ingredient'}, {class: "form-control"} %>
            </div>
        </div>
        <div class="col-2 col-md-1">
            <label for="remove-<%= :order %>"  class="form-label">Action</label>
              <button id="remove-<%= :order %>" data-controller="nested-fields" data-action="click->nested-fields#removeField" type="button" class="btn btn-sm btn-outline-danger col-xs-4"><i class="fa-regular fa-trash-can"></i></button>
        </div>
    </div>
  </div>
  