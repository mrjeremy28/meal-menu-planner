<div class="container">
  <div class="row">
    <div class="col"> </div>
    <div class="col-sm-12 col-md-10 col-lg-8">
      <div id="<%= dom_id @ingredient %>" class="card">

        <% if @ingredient.image.attached? %>
          <img src="<%=(url_for(@ingredient.image))%>" class="card-img-top" alt="<%= @ingredient.image.filename %>">
          <% else %>
        <span class="container">No Image. Click Edit to add</span>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= @ingredient.name %></h5>
          <p class="card-text"><%= @ingredient.description %></p>
        </div>
        
        <div class="card-body">
          <%= link_to("Edit this ingredient", edit_ingredient_path(@ingredient), class: 'action edit btn btn-primary float-start') %>
          <%= link_to 'Delete Ingredient',url_for(action: :destroy, id: @ingredient.id),method: :delete, data: {confirm: "Are you sure you want to delete #{@ingredient.name}?"}, class: 'btn btn-danger float-end' %>

          
        </div>
      </div>
    </div>
    <div class="col"> </div>
  </div>
</div>
