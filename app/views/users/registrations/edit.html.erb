<div class="container-fluid pr-1 pl-md-3 pl-2">
  <div class="row mb-3">
    <div class="col content-text">
      <div class="row">
        <div class="col">
          <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>
        </div>
      </div>
      <hr>

      <div class="row">
        <div class="col-md-6">
          <%= form_with(model: resource, url: users_upload_image_path, method: :post, multipart: true) do |form| %>
          <div class="title-related-links">
            <h4>Picture</h4>

            <!-- Picture related fields here -->
            <div class="form-group m-1">

              <div class="input-group">
                <!-- <div class="custom-file">                   -->
                  <%= form.file_field :image, class: 'custom-file-input form-control', accept:"image/*" %>
                  <%= form.label :image, class: "custom-file-label  d-none" %>
                  <!-- <label id="user-picture-label-none" class="custom-file-label " for="user-picture">
                    No file selected
                  </label> -->
                <!-- </div> -->
                <%= form.submit 'Upload Image', class: 'btn btn-primary' %>
              </div>
            </div>

          </div>

          <div class="form-group row">
            <div class="text-center">
              <% if current_user.image.attached? %>
                <img src="<%=(url_for(current_user.image))%>" class="rounded mx-auto d-block img-thumbnail"/>
                <%= link_to 'Remove Image', users_remove_image_path(current_user), method: :delete, data: { confirm: 'Are you sure want to remove your image?' }, class: 'btn btn-danger' %> 
              <% else %>
                <p id="no-current-user-picture-hint" class="form-text text-muted font-italic mb-5">No picture available</p>
              <% end %>
            </div>
          </div>
          
          <!-- end of Picture fields -->
          <% end %>
        </div>

        <div class="col-md-6">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= error_messages_for(f.object) %>
            <!-- Other input fields here -->
          <!-- Other input fields here -->
            <div class="form-group">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true%>
              <div class="invalid-feedback">An email is required</div>
            </div>
            <div class="form-group">
              <%= f.label :first_name, class: "form-label" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>              
            </div>
            <div class="form-group">
              <%= f.label :last_name, class: "form-label" %>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>              
            </div>
            <hr />
            <div class="form-group p-1">
              Password Section
            </div>
            <hr />
            <div class="form-group pb-3">
              <%= f.label :password, class: "form-label" %> <i>(leave blank if you don't want to change it)</i>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>
          
            <div class="form-group pb-3">
              <%= f.label :password_confirmation, class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          
            <div class="form-group pb-3">
              <%= f.label :current_password, class: "form-label" %> <br /> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", required: true %>
            </div>

            <%= f.submit "Update Profile", class:"btn btn-success" %>
            <%= link_to "Back", :back, class:"btn btn-outline-secondary float-end" %>

          <hr />
          <h3 class="text-danger">Delete my account</h3>
          <hr />

          <div class="p-3 bg-light">
            Want to delete your account and all related data? 
            <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure you want to Delete your account?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
          </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>





